{% extends '../../base.html.twig' %}

{% block page_title %} {{ 'title.user_profile'|trans }} {% endblock %}
{% block page_pretitle %} User settings {% endblock %}

{% block page_content %}
    <div class="row">
        <div class="col-sm-12 col-md-8 col-lg-8">
            {% embed '@theme/components/form.html.twig' %}
                {% import '@theme/components/buttons.html.twig' as buttons %}
                {% block box_footer %}
                    {{ buttons.submit_button('form-submit', {title : 'action.save_changes'}, 'primary') }}
                    <div class="float-end">
                        {{ buttons.link_button('action.change_password', path('user_change_password'), 'password', 'default') }}
                    </div>
                {% endblock %}
            {% endembed %}
        </div>
    </div>
{% endblock %}
